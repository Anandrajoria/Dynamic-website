<div class="container-fluid mt-5 contact-style" id="contactid">
    <div class="row">
        <h1 class="text-center main-heading">Contact us</h1>
        <p class="text-center sub-heading">we will be happy to add you</p>

        <div class="row">
            <div class="col-md-6 col-12 mx-auto">
                <form action="/contact" method="POST">
                    <div class="form-group">
                        <label for="exampleInputPassword">Name</label>
                        <input type="text" class="form-control" name="name" id="exampleInputPassword" placeholder="Full name">
                    </div>  

                    <div class="form-group">
                        <label for="exampleInputEmail">Email address</label>
                        <input type="email" class="form-control" name="email" id="exampleInputEmail" placeholder="Enter your email" aria-describedby="emailHelp">
                        <small id="emailHelp" class="form-text text-muted">we'll never share your email with anyone else</small>
                    </div>  

                    <div class="form-group">
                        <label for="exampleInputPassword">phone</label>
                        <input type="number" class="form-control" name="phone" id="exampleInputPassword" placeholder="phone number">
                    </div>  

                    <div class="form-group">
                        <label for="exampleInputPassword">message</label>
                        <input type="text" class="form-control" name="message" id="exampleInputPassword" placeholder="message">
                    </div>  
                    <button type="submit" class="btn-style btn-primary">submit</button>
                </form>
            </div>
        </div>
    </div>
</div>